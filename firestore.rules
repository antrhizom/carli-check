rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // USERS Collection
    // - Lesen nur für eingeloggte User
    // - Schreiben nur für eigenen User
    match /users/{userId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.auth.uid == userId;
      allow update, delete: if request.auth != null && request.auth.uid == userId;
    }
    
    // ENTRIES Collection (Arbeitseinträge)
    // - Lesen nur für eingeloggte User (Filterung im Code)
    // - Erstellen nur mit eigener apprenticeId
    // - Löschen nur eigene Einträge
    match /entries/{entryId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && 
        request.resource.data.apprenticeId == request.auth.uid;
      allow update: if request.auth != null;
      allow delete: if request.auth != null && 
        resource.data.apprenticeId == request.auth.uid;
    }
    
    // APPRENTICE_CODES - Öffentlich lesbar für Registrierung
    match /apprenticeCodes/{codeId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // REGISTRATION_CODES
    match /registrationCodes/{codeId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // COMPANIES
    match /companies/{companyId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
  }
}
