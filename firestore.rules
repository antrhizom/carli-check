rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // TEMPORÄR OFFEN FÜR ENTWICKLUNG
    // Nach dem Testen wieder einschränken!
    
    // Apprentice Codes - IMMER lesbar (für Login)
    match /apprenticeCodes/{codeId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Users - lesbar für alle authentifizierten, schreibbar für sich selbst
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null;
    }
    
    // Companies - lesbar für alle authentifizierten
    match /companies/{companyId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // Entries - voll zugänglich für authentifizierte Benutzer
    match /entries/{entryId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update: if request.auth != null;
      allow delete: if request.auth != null;
    }
  }
}
